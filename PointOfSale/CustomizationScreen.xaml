<UserControl x:Class="PointOfSale.CustomizationScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel x:Name="MainPanel" CanVerticallyScroll="True" Grid.Row="0">
            <TextBox x:Name="TopLabel" Text="Customization Options" TextAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" FontSize="24" Background="LightBlue" Margin="5,0,5,0"/>
            <TextBox x:Name="MenuItemLabel" Text="" TextAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" FontSize="20" Background="LightBlue" Margin="5,0,5,0"/>
        </StackPanel>
        <Button x:Name="ConfirmOrder" Content="Confirm Item" FontSize="20" Background="LightBlue" Grid.Row="1" Margin="5,0,5,0" Click="ConfirmOrder_Click"/>
    </Grid>
</UserControl>
